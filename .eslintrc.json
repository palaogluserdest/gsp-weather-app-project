{
  "env": {
    "browser": true,
    "es2021": true
  },
  "extends": ["next/core-web-vitals", "next/typescript", "eslint:recommended", "plugin:prettier/recommended"],
  "plugins": ["prettier"],
  "parserOptions": {
    "ecmaVersion": 12,
    "sourceType": "module"
  },
  "rules": {
    "prettier/prettier": "error",
    "no-console": "warn",
    "eqeqeq": ["error", "always"],
    "no-unused-vars": ["warn", { "vars": "all", "args": "after-used" }],
    "semi": ["error", "always"],
    "prefer-const": ["error"],
    "react/prop-types": "off",
    "@typescript-eslint/no-explicit-any": "warn"
  }
}
